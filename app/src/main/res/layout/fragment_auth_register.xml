<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logoBg">


    <RelativeLayout
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_16sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/_60sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What's your Details?"
                style="@style/textHeading"
                android:textColor="@color/white"
                android:textSize="@dimen/_16sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:lineSpacingExtra="@dimen/_5sdp"
                style="@style/textNormal"
                android:text="We protect our community by making sure everyone using WhatToDO is real."
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout

                    android:background="@drawable/bg_rect_stroke"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Your Name"
                        android:inputType="text"
                        style="@style/textNormal"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:background="@null"
                        android:textColor="@color/black"
                        
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout

                    android:background="@drawable/bg_rect_stroke"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Your Mobile No"
                        android:background="@null"
                        style="@style/textNormal"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:inputType="text"
                        android:textColor="@color/black"
                        
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/bg_rect_stroke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Your Email"
                        android:background="@null"
                        style="@style/textNormal"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:inputType="text"
                        android:textColor="@color/black"
                        
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                    android:background="@drawable/bg_rect_stroke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/txtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Your Password"
                        android:background="@null"
                        android:paddingVertical="@dimen/_10sdp"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:inputType="text"
                        android:textColor="@color/black"

                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

            </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_60sdp"
            android:background="@drawable/bg_solid"
            android:text="Submit"
            style="@style/textHeading"
            android:textColor="@color/logoBg" />

    </RelativeLayout>
    <!--        </androidx.cardview.widget.CardView>-->
    <!--    </androidx.core.widget.NestedScrollView>-->

    <include layout="@layout/loader" />
</RelativeLayout>