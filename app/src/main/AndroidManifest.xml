<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wahttodo.app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.WhatToDo">
        <activity
            android:name=".view.activity.DecisionActivity"
            android:label="Decision For"
            android:exported="false" />
        <activity
            android:name=".view.activity.WaitingRoomActivity"
            android:label="Waiting Room"
            android:exported="false" />
        <activity
            android:name=".view.activity.HomeActivity"
            android:label="Home"
            android:exported="false" />
        <activity
            android:name=".view.MainActivity"
            android:exported="false" />
        <activity
            android:name=".view.activity.AuthActivity"
            android:theme="@style/noActionBar"
            android:exported="false" />
        <activity
            android:name=".view.activity.SplashActivity"
            android:theme="@style/noActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>